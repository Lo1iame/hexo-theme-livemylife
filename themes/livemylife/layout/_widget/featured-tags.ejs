<!-- Featured Tags -->
<% if(config['featured-tags']) { %>
<section>
  <!-- no hr -->
  <%
    var lang;
    var currentURL = page.path.split('/') ;
    if (currentURL.length === 1) {
      lang = page.lang ;
    } else {
      lang = currentURL.shift();
    }

    var tags = site.tags.map(function(tag){
      let tps = tag.posts.filter(function(post){
        return post.lang == lang;
      });
      if(tps.length !== 0){
        let newTag = Object.assign({},tag);
        newTag['posts'] = tps;
        return newTag;
      }
      return;
    }).filter(Boolean);
  %>

  <h5><a href="<%= config.root %><%= page.lang %>/tags/"><%= __('featured_tags') %></a></h5>
  <div class="tags">
    <% tags.map(function(tag){  %>
    <% if(tag.length > config['featured-condition-size']) { %>
    <a href="<%= config.root %><%= page.lang %>/tags/#<%= tag.name %>" title="<%= tag.name %>" rel="<%= tag.length %>"><%= tag.name %></a>
    <% } %>
    <% }) %>
  </div>
</section>
<% }%>
